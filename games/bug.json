{
    "scene": {
        "autostart": true,
        "children": {
            "header": {
                "type": "BitmapData",
                "fillStyle": "#300",
                "width": "100%",
                "height": "12%",
                "position": { "my": "top left", "at": "top left", "of": "parent" }
            },
            "body": {
                "type": "BitmapData",
                "fillStyle": "#00A",
                "anchors": [
                    { "my": "top left", "at": "bottom left", "of": "parent.header" },
                    { "my": "bottom right", "at": "top right", "of": "parent.footer" }
                ]                
            },
            "footer": {
                "type": "BitmapData",
                "fillStyle": "#030",
                "width": "100%",
                "height": "5%",
                "position": { "my": "bottom left", "at": "bottom left", "of": "parent" }
            }
        }        
    }
}